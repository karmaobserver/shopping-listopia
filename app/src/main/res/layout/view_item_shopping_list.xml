<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_shoppinglist_margin_left"
    android:layout_marginStart="@dimen/item_shoppinglist_margin_left">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/item_text_size_list"
            android:text="Nesto"/>

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_done"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_mode_edit_small"/>

</LinearLayout>