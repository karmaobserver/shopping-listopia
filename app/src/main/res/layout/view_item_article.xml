<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_shoppinglist_margin_left"
        android:layout_marginStart="@dimen/item_shoppinglist_margin_left">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/item_text_size"
            android:text="ASDADADADAS aa sdD"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amountFix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/item_text_size"
                android:text="Amount: "/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/item_text_size"
                android:text="4"/>

         </LinearLayout>

    </LinearLayout>
    <!-- Right side spacer -->
    <!--<View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />-->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_done"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_mode_edit_small"/>

</LinearLayout>